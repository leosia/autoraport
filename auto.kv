<AutoLayout>:
    orientation: "vertical"
    to_num: to_num_kv
    fps: fps_kv
    start: start_kv
    interval: interval_kv
    files: files
    pdftitle: pdftitle_kv


    ActionBar:
        ActionView:
            ActionPrevious:
                with_previous: False
                app_icon: 'logo.png'
                title: "Autoliv Automatic Report"


    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            size_hint_x: .6
            orientation: "vertical"
            canvas.before:
                Color:
                    rgba: .10, .10, .10, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                size_hint_y: 2
            BoxLayout:
                orientation: "horizontal"
                padding: 8
                Label:
                    text: "PDF Title:"
                TextInput:
                    id: pdftitle_kv
                    text: ""
                    #spacing: 20, 20, 20, 20
                    multiline: False
                    write_tab: False
            BoxLayout:
                orientation: "horizontal"
                padding: 8
                Label:
                    text: "Test Order:"
                TextInput:
                    id: to_num_kv
                    text: ""
                    #spacing: 20, 20, 20, 20
                    input_filter: 'int'
                    multiline: False
                    hint_text: "Only number"
                    write_tab: False
            BoxLayout:
                orientation: "horizontal"
                padding: 8
                Label:
                    text: "Video FPS:"
                TextInput:
                    id: fps_kv
                    text: "3000"
                    input_filter: 'int'
                    multiline: False
                    hint_text: "Default 3000 fps"
                    write_tab: False
            BoxLayout:
                orientation: "horizontal"
                padding: 8
                Label:
                    text: "Time start:"
                TextInput:
                    id: start_kv
                    text: ""
                    input_filter: 'int'
                    multiline: False
                    hint_text: "Time of first picture in pdf"
                    write_tab: False
            BoxLayout:
                orientation: "horizontal"
                padding: 8
                Label:
                    id: lab
                    text: "Time interval:"
                TextInput:
                    id: interval_kv
                    text: ""
                    input_filter: 'int'
                    multiline: False
                    hint_text: ""
                    write_tab: False
            Label:
                size_hint_y: 2
            Button:
                background_color: .65, .65, .65, 1
                text: "Videos"
                on_release: root.load_popup.open()
        BoxLayout:
            size_hint_x: .5
            Label:
                id: files
                text: ''


    Button:
        size_hint_y: .15
        text: "Start"
        on_release: root.video_processing()


<VideoPopup>:
    size_hint: .8, .8
    title: "Select videos"
    title_size: root.height * .05
    auto_dismiss: False
    filechooser: filechooser
    BoxLayout:
        orientation: 'vertical'

        FileChooserListView:
            id: filechooser
            path: ''
            filters: ['*.avi', '*.mkv', '*.mp4']

        BoxLayout:
            size_hint_y: None
            height: 50
            Label:
                size_hint_x: .4
            Button:
                text: "Select"
                on_release: root.copy_files(filechooser.path)
            Button:
                text: "Cancel"
                on_release: root.dismiss()
            Label:
                size_hint_x: .4

<StartPopup>:
    size_hint: .6, .4
    start: start
    auto_dismiss: False
    Label:
        id: start
        markup: True
        size_text: root.size
        text: "<b>Loading...</b>"

<InfoPopup>:
    size_hint: .6, .4
    infopopup: infopopup
    info_label: info_label
    auto_dismiss: False
    title: 'Info'
    BoxLayout:
        orientation: "vertical"
        Label:
            markup: True
            id: info_label
            size_text: root.size
            font_size: '20sp'
            text: ""
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: .3
            Label:
                size_hint_x: .3
            Button:
                id: infopopup
                markup: True
                text: '[b]OK[/b]'
                on_release: root.close_popup()
            Label:
                size_hint_x: .3